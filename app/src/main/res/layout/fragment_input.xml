<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_marginTop="@dimen/margin_top_edit_text"
        android:layout_marginLeft="@dimen/margin_side_edit_text"
        android:layout_marginRight="@dimen/margin_side_edit_text"
        android:hint="@string/input_hint_text"
        android:textColorHint="@color/hint_text_color"
        android:textColor="@color/colorPrimary"
        android:id="@+id/input_search_data"
        android:outlineSpotShadowColor="@color/colorPrimary"
        android:textCursorDrawable="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_for_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/exit"
            android:layout_weight="1"
            android:text="@string/text_button_exit"
            android:layout_margin="@dimen/margin_for_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/nextFragment"
            android:layout_weight="1"
            android:text="@string/text_button_search"
            android:layout_margin="@dimen/margin_for_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>